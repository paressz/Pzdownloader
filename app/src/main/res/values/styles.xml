<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_download" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="button_paste" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:backgroundTint">?attr/colorTertiaryContainer</item>
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="input_url_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:inputType">textUri|textMultiLine</item>
        <item name="android:maxLines">3</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="radio_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="radio_group_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>